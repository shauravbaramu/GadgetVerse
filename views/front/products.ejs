<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products - GadgetVerse</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="/front/css/styles.css">
    <link rel="stylesheet" href="/front/css/products.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <!--========== HEADER ==========-->
    <header class="l-header" id="header">
        <!-- =========Navbar====== -->
        <nav class="nav bd-container">
          <!-- ====== Logo of the website =======-->
          <a href="/" class="nav__logo" id="logo">
            GadgetVerse
            <!-- Website logo image -->
          </a>
  
          <!-- Search bar for products -->
          <!-- <div class="search-bar">
            <input
              type="text"
              id="searchBar"
              name="search"
              placeholder="Search products..."
            />
            <button type="button" class="search-button">
              <i class="fa fa-search"></i>
            </button>
            <div id="searchDropdown" class="search-dropdown">
            </div>
          </div> -->
  
          <!-- Navigation items container -->
          <div class="nav__menu" id="nav-menu">
            <!-- List of navigation links -->
            <ul class="nav__list">
              <!-- Home link -->
              <li class="nav__item">
                <a href="/" class="nav__link ">Home</a>
              </li>

              <!-- Products link -->
              <li class="nav__item">
                <a href="/products" class="nav__link active-link">Products</a>
              </li>
             
              <!-- About link -->
              <li class="nav__item">
                <a href="/about" class="nav__link">About</a>
              </li>

              <!-- Contact link -->
              <li class="nav__item">
                <a href="/contactus" class="nav__link">Contacts</a>
              </li>


             <!-- Cart icon (only visible if user is logged in) -->
              <% if (user) { %>
                <li class="nav__item">
                  <a href="/cart" class="nav__link">
                    <i class="fa-solid fa-cart-shopping"></i>
                    <span
                      id="cart-count"
                      class="badge badge-pill badge-danger position-absolute"
                      style="display: none"
                      >0</span
                    >
                  </a>
                </li>
                <% } %>
  
  
  
              <!-- User login/logout -->
              <li class="nav__item">
                <% if (user) { %>
                <!-- User Icon and Name -->
                <div class="user-menu">
                  <a href="#" class="user-dropdown-toggle">
                    <img
                      src="/front/img/user-icon.png"
                      alt="user"
                      class="user-icon"
                    />
                    <span> <%= user.first_name %> </span>
                    <i class="fa fa-caret-down"></i>
                  </a>
                  <!-- Dropdown Menu -->
                  <ul class="user-dropdown">
                    <li><a href="/profile">Profile</a></li>
                    <li><a href="/my-orders">My Orders</a></li>
                    <li><a href="/logout">Logout</a></li>
                  </ul>
                </div>
                <% } else { %>
                <!-- Show Login Button if Not Logged In -->
                <div class="login-btn" id="loginContainer">
                  <a href="/login" class="button" id="loginButton">Login</a>
                  <!-- Link to the login page with an id for styling or JavaScript interaction -->
                </div>
                <% } %>
              </li>
            </ul>
          </div>
  
          <!-- Toggle button for mobile view -->
          <div class="nav__toggle" id="nav-toggle">
            <span>&#9776;</span>
          </div>
        </nav>
      </header>

    <main>
        <!-- Page Header -->
        <div id="page-header">
            <div class="page-title">Products</div>
        </div>

        <div class="bd-container main-content section">
            <!-- Filter and Search Section -->
            <div class="filter-sort-container text">
                <form method="GET" action="/products" class="filters-form">
                    <div class="filter">
                        <label for="categoryFilter">Category:</label>
                        <select id="categoryFilter" name="category" onchange="this.form.submit()">
                            <option value="all" <%= categoryFilter === 'all' ? 'selected' : '' %>>All</option>
                            <% categories.forEach(category => { %>
                            <option value="<%= category.name %>" <%= category.name === categoryFilter ? 'selected' : '' %>>
                                <%= category.name %>
                            </option>
                            <% }); %>
                        </select>
                    </div>
                
                    <div class="filter">
                        <label for="priceFilter">Price Range:</label>
                        <select id="priceFilter" name="price" onchange="this.form.submit()">
                            <option value="all" <%= priceFilter === 'all' ? 'selected' : '' %>>All</option>
                            <option value="0-500" <%= priceFilter === '0-500' ? 'selected' : '' %>>$0 - $500</option>
                            <option value="500-1000" <%= priceFilter === '500-1000' ? 'selected' : '' %>>$500 - $1000</option>
                            <option value="1000-2000" <%= priceFilter === '1000-2000' ? 'selected' : '' %>>$1000 - $2000</option>
                            <option value="2000+" <%= priceFilter === '2000+' ? 'selected' : '' %>>$2000+</option>
                        </select>
                    </div>
                
                    <div class="filter">
                        <label for="searchBar">Search:</label>
                        <input
                            type="text"
                            id="searchBar"
                            name="search"
                            placeholder="Search products..."
                            value="<%= searchQuery %>"
                            autocomplete="off"
                        />
                        <div id="searchResults" class="search-results"></div>
                    </div>
                </form>
            </div>

            <!-- Product List -->
            <div id="productCategories" class="product-grid">
                <% Object.keys(groupedProducts).forEach(categoryName => { %>
                <div class="product-category">
                    <h2 class="category-title"><%= categoryName %></h2>
                    <div class="product-list">
                        <% groupedProducts[categoryName].forEach(product => { %>
                            <div class="row">
                                <div class="col-md-4 col-sm-6 col-xs-12">
                                    <div class="product-card">
                                        <div class="product-image">
                                            <img src="<%= product.image || '/admin/img/placeholder.png' %>" alt="<%= product.name %>">
                                        </div>
                                        <div class="product-details">
                                            <h3 class="product-name"><%= product.name %></h3>
                                            <p class="product-price">$<%= product.price %></p>
                                            <a href="/product-details?id=<%= product._id %>" class="button">View Details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
                <% }); %>
            </div>
            
            <!-- Pagination Section -->
            <div class="pagination">
                <ul>
                    <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="<%= currentPage === i ? 'active' : '' %>">
                        <a href="/products?page=<%= i %>&category=<%= categoryFilter %>&price=<%= priceFilter %>&search=<%= searchQuery %>">
                            <%= i %>
                        </a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </main>

    <script src="/front/js/script.js"></script>
    <script src="/front/js/search.js"></script>
</body>

</html>