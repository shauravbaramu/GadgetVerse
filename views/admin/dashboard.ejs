<%- include('partials/header', { title: 'Dashboard' }) %>
<%- include('partials/topnav') %>
<%- include('partials/sidebar', { activePage: 'admin/' }) %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Dashboard</h1>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- Small boxes -->
      <div class="row">
        <div class="col-lg-3 col-6">
          <!-- small box -->
          <div class="small-box bg-info">
            <div class="inner">
              <h3><%= data.users %></h3>
              <p>Users</p>
            </div>
            <div class="icon">
              <i class="fas fa-users"></i>
            </div>
            <a href="users/" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
          </div>
        </div>

        <div class="col-lg-3 col-6">
          <!-- small box -->
          <div class="small-box bg-success">
            <div class="inner">
              <h3><%= data.productCategories %></h3>
              <p>Product Categories</p>
            </div>
            <div class="icon">
              <i class="fas fa-layer-group"></i>
            </div>
            <a href="productCategories/" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
          </div>
        </div>

        <div class="col-lg-3 col-6">
          <!-- small box -->
          <div class="small-box bg-danger">
            <div class="inner">
              <h3><%= data.products %></h3>
              <p>Products</p>
            </div>
            <div class="icon">
              <i class="fas fa-box-open"></i>
            </div>
            <a href="products/" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
          </div>
        </div>

        <div class="col-lg-3 col-6">
          <!-- small box -->
          <div class="small-box bg-primary">
            <div class="inner">
              <h3><%= data.orders %></h3>
              <p>Orders</p>
            </div>
            <div class="icon">
              <i class="fas fa-shipping-fast"></i>
            </div>
            <a href="orders/" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
          </div>
        </div>
      </div>

      <!-- Charts Section -->
      <div class="row">
        <div class="col-lg-6 col-12">
          <div class="card">
            <div class="card-header bg-info">
              <h3 class="card-title">Income vs Expenses</h3>
            </div>
            <div class="card-body">
              <canvas id="incomeExpenseChart"></canvas>
            </div>
          </div>
        </div>
        <div class="col-lg-6 col-12">
          <div class="card">
            <div class="card-header bg-primary">
              <h3 class="card-title">Orders by Status</h3>
            </div>
            <div class="card-body">
              <canvas id="orderStatusChart"></canvas>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('partials/footer') %>

<!-- Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(function () {
    // Fetch chart data via AJAX
    $.get('/admin/dashboard/chart-data', function (data) {
      // Income vs Expenses Chart
      const incomeExpenseCtx = document.getElementById('incomeExpenseChart').getContext('2d');
      new Chart(incomeExpenseCtx, {
        type: 'bar',
        data: {
          labels: ['Income', 'Expenses'],
          datasets: [{
            label: 'Amount (in $)',
            data: [data.income, data.expenses],
            backgroundColor: ['#28a745', '#dc3545']
          }]
        },
        options: {
          responsive: true,
          plugins: {
            legend: { display: false }
          }
        }
      });

      // Orders by Status Chart
      const orderStatusCtx = document.getElementById('orderStatusChart').getContext('2d');
      new Chart(orderStatusCtx, {
        type: 'pie',
        data: {
          labels: ['Pending', 'Processing', 'Shipped', 'Delivered', 'Cancelled'],
          datasets: [{
            data: [
              data.orderStatusCounts.pending,
              data.orderStatusCounts.processing,
              data.orderStatusCounts.shipped,
              data.orderStatusCounts.delivered,
              data.orderStatusCounts.cancelled
            ],
            backgroundColor: ['#ffc107', '#17a2b8', '#007bff', '#28a745', '#dc3545']
          }]
        },
        options: {
          responsive: true,
          plugins: {
            legend: { position: 'bottom' }
          }
        }
      });
    });
  });
</script>