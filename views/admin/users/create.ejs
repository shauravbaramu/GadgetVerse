<%- include('../partials/header', { title: 'Add ' + crudInfo.title }) %> <%-
include('../partials/topnav') %> <%- include('../partials/sidebar', {
activePage: 'admin/users/create' }) %>

<!-- Inline Styles to adjust spacing -->
<style>
  /* Remove extra white background from the content-wrapper */
  .content-wrapper {
    background: #f4f6f9; 
    margin-top: 0;
  }
  /* Add some space between the topnav and the content */
  .content {
    margin-top: 20px; /* Adjust as needed */
  }
</style>

<div class="content-wrapper">
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- left column -->
        <div class="col">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><%= crudInfo.title %></h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form
              class="form repeater"
              id="form"
              name="myForm"
              action="/<%= crudInfo.route %>store"
              method="post"
              enctype="multipart/form-data"
            >
              <div class="card-body">
                <% if (errors && errors.length) { %> <%
                errors.forEach(function(error) { %>
                <div class="alert alert-danger" role="alert">
                  <%= error.msg %>
                </div>
                <% }); %> <% } %>
                <input
                  name="add_more"
                  type="hidden"
                  id="add-more"
                  value="false"
                />
                <!-- Include the form partial -->
                <%- include('form', { item: null, old: {} }) %>
              </div>
              <div class="card-footer">
                <button
                  type="submit"
                  id="button_submit"
                  class="button_submit btn btn-primary"
                  name="action"
                  value="submit"
                >
                  Submit
                </button>
                <% if(typeof addMoreButton !== 'undefined' && addMoreButton) {
                %>
                <button
                  type="submit"
                  id="button_submit_add"
                  class="button_submit btn btn-primary"
                  name="action"
                  value="add"
                >
                  Submit & Add new
                </button>
                <% } %>
                <a
                  href="javascript:history.back();"
                  class="btn btn-default float-right"
                  >Cancel</a
                >
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!--/.col (left) -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
</div>

<%- include('../partials/footer') %>

<!-- Optional Scripts for validation -->
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.0/jquery.validate.min.js"></script>
<script>
  $("#button_submit").click(function (e) {
    e.preventDefault();
    $("#form").submit();
  });
</script>
