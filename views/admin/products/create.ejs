<%- include('../partials/header', { title: 'Add ' + crudInfo.title }) %>
<%- include('../partials/topnav') %>
<%- include('../partials/sidebar', { activePage: 'admin/products/index' }) %>

<style>
.d-none {
  display: none !important;
}
</style>
<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <h1>Create <%= crudInfo.title %></h1>
    </div>
  </section>

  <section class="content">
    <div class="container-fluid">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title"><%= crudInfo.title %> | Create</h3>
        </div>
        <!-- Form Start -->
        <form
          id="form"
          action="/<%= crudInfo.route %>store"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="card-body">
            <% if (errors && errors.length) { %>
              <% errors.forEach(function (error) { %>
                <div class="alert alert-danger" role="alert"><%= error.msg %></div>
              <% }); %>
            <% } %>

            <!-- Include the form partial with old values -->
            <%- include('form', { item: null, old: old, categories: categories }) %>
          </div>
          <div class="card-footer">
            <button type="submit" id="button_submit" class="btn btn-primary">
              Submit
            </button>
            <a
              href="javascript:history.back();"
              class="btn btn-default float-right"
              >Cancel</a
            >
          </div>
        </form>
      </div>
    </div>
  </section>
</div>

<%- include('../partials/footer') %>

<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.0/jquery.validate.min.js"></script>
<script>
  $("#button_submit").click(function (e) {
    e.preventDefault();
    $("#form").submit();
  });
</script>