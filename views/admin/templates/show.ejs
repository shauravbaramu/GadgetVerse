<%- include('../partials/header', { title: 'Show ' + crudInfo.title }) %>
<%- include('../partials/topnav') %>
<%- include('../partials/sidebar') %>

<div class="content-wrapper">
  <section class="content-header">
    <div class="navbar bg-white p-2" id="head" style="border-radius: 2px">
      <a href="javascript:history.back();" class="btn btn-default btn-sm btn-cancel">
        <i class="fas fa-arrow-left"></i> Back
      </a>
      <% if (!hideEdit) { %>
      <a href="/<%= crudInfo.route %>edit/<%= item._id %>" class="btn btn-primary btn-sm" style="margin-right: 18%; color: white!important;">
        <i class="fa fa-edit"></i> Edit
      </a>
      <% } %>
    </div>
  </section>
  <section class="content">
    <div class="container-fluid">
      <div class="card mx-4 mb-4">
        <div class="card-header">
          <h3 class="card-title"><%= crudInfo.title %> | Show</h3>
        </div>
        <div class="card-body px-5">
          <%- form_content %>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('../partials/footer') %>

<script>
  $(document).ready(function () {
    $('#form input').attr('readonly', true);
    $('#form select').attr('disabled', true);
  });
</script>
