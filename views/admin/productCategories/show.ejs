<%- include('../partials/header', { title: 'Show ' + crudInfo.title }) %> <%-
include('../partials/topnav') %> <%- include('../partials/sidebar', {
activePage: 'admin/productCategories/index' }) %>

<div class="content-wrapper">
  <!-- Content Header -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>View <%= crudInfo.title %></h1>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- left column -->
        <div class="col">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><%= crudInfo.title %></h3>
              <% if (typeof hideEdit === "undefined" || !hideEdit) { %>
              <a
                href="/<%= crudInfo.route %>edit/<%= item._id %>"
                class="btn btn-primary float-right"
              >
                <i class="fa fa-edit"></i>
                <span class="kt-hidden-mobile">Edit</span>
              </a>
              <% } %>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <div class="row my-4">
                <div class="col-md-6">
                  <label for=""><span class="show-text">Name:</span></label> <%=
                  item.name ? item.name : "-" %>
                </div>
                <div class="col-md-6">
                  <label for=""><span class="show-text">Image:</span></label><br /><img
                    style="width: 150px; height: 150px; margin-left: 4%"
                    src="<%= item.image ? item.image : '/admin/img/placeholder.png' %>"
                    alt="Category Image"
                  />
                </div>
              </div>
              <div class="row my-4">
                <div class="col-md-12">
                  <label for=""
                    ><span class="show-text">Description:</span></label
                  >
                  <hr>
                  <%= item.description %><br />
                </div>
              </div>
            </div>
            <div class="card-footer">
              <a
                href="javascript:history.back();"
                class="btn btn-default float-right"
                >Cancel</a
              >
            </div>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col (left) -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
</div>
<!-- /.content-wrapper -->

<%- include('../partials/footer') %>

<script>
  $(document).ready(function () {
    $("#form input").attr("readonly", true);
    $("#form select").attr("disabled", true);
  });
</script>
