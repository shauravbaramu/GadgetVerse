<%- include('../partials/header', { title: 'Show ' + crudInfo.title }) %>
<%- include('../partials/topnav') %>
<%- include('../partials/sidebar', { activePage: 'admin/orders/show' }) %>

<div class="content-wrapper">
  <!-- Content Header -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>View <%= crudInfo.title %></h1>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="content">
    <div class="container-fluid">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title"><%= crudInfo.title %> | Show</h3>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 my-2">
              <p><strong>User:</strong> <%= item.user ? item.user.name : 'N/A' %></p>
            </div>
            <div class="col-md-6 my-2">
              <p><strong>Status:</strong> <%= item.status %></p>
            </div>
            <div class="col-md-6 my-2">
              <p><strong>Total Price:</strong> <%= item.totalPrice %></p>
            </div>
            <div class="col-md-6 my-2">
              <p><strong>Shipping Address:</strong> <%= item.shippingAddress %></p>
            </div>
          </div>
          <hr />
          <h4>Order Items</h4>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <% item.items.forEach(function (orderItem) { %>
                <tr>
                  <td><%= orderItem.product ? orderItem.product.name : 'N/A' %></td>
                  <td><%= orderItem.quantity %></td>
                  <td><%= orderItem.price %></td>
                  <td><%= (orderItem.quantity * orderItem.price).toFixed(2) %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <div class="card-footer">
          <a href="javascript:history.back();" class="btn btn-default float-right">Cancel</a>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('../partials/footer') %>